<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/img_goodPic"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="65dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_goodame"
                    android:text="爱心自行车"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_info"
                    android:textSize="11sp"
                    android:singleLine="true"
                    android:textColor="@color/fontColor_support"
                    android:layout_marginTop="8dp"
                    android:text="本店支持在线下单，足不出户，外送到家!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_price"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_rmb1"
                            android:text="￥5"
                            android:textSize="13sp"
                            android:textColor="@color/orange"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/txt_rmb2"
                            android:layout_marginLeft="5dp"
                            android:text=" + "
                            android:textSize="13sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_gwb1"
                            android:textColor="@color/orange"
                            android:text="5"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/txt_gwb2"
                            android:layout_marginLeft="5dp"
                            android:text="购物币 + "
                            android:textSize="13sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_qbb1"
                            android:textColor="@color/orange"
                            android:text="5"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/txt_qbb2"
                            android:layout_marginLeft="5dp"
                            android:text="钱包币"
                            android:textSize="13sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_lpq"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_lpq"
                            android:text="5"
                            android:textSize="13sp"
                            android:textColor="@color/orange"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:text="礼品券"
                            android:textSize="13sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </FrameLayout>



            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>