<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/intervalColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的汇赚宝"
            android:textColor="@color/fontColor_gray"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_introduce"
            android:text="玩法介绍"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/fontColor_gray"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="90dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_photo"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/tree_small"
            />


        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_toEndOf="@+id/img_photo"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="22dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="股东:"
                android:textSize="15sp"
                android:textColor="@color/fontColor_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="状态:"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/fontColor_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_toEndOf="@+id/layout_text"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/txt_name"
                android:text="张三"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_state"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_activate"
            android:visibility="gone"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="去激活"
                android:textSize="15sp"
                android:textColor="@color/fontColor_orange"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView

                android:layout_marginRight="15dp"
                android:src="@mipmap/more_right"
                android:layout_width="8dp"
                android:layout_height="14dp" />

        </LinearLayout>




    </RelativeLayout>


    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="98dp"
            android:layout_height="match_parent">

            <TextView
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_support"
                android:text="隶属辖区"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_support"
                android:text="被摇次数"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_popedom"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:text="隶属辖区"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/txt_number"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:text="5次"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>