<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/intervalColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的福利月卡"
            android:textColor="@color/fontColor_gray"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_introduce"
            android:text="玩法介绍"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/fontColor_gray"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="90dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_photo"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/photo_default"
            />


        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_toEndOf="@+id/img_photo"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="22dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="股东:"
                android:textSize="15sp"
                android:textColor="@color/fontColor_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="状态:"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/fontColor_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_toEndOf="@+id/layout_text"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_status"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/fontColor_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="98dp"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_support"
                android:text="隶属辖区"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_support"
                android:text="总股本"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_support"
                android:text="类型"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <TextView
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_support"
                android:text="已得奖励"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/txt_awardTitle"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_support"
                android:text="下次奖励"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_popedom"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/txt_principal"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/txt_type"
                android:gravity="center_vertical"
                android:text="月卡"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/txt_award"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/txt_awardDate"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>




        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_confirm"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="签到领奖"
        android:background="@drawable/corners_orange"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>