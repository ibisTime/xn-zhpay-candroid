<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    app:image_scale_type="center_crop"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View

                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <TextView
                        android:id="@+id/txt_name"
                        android:textSize="16sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_info"
                        android:textColor="@color/fontColor_support"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="@color/lineColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:id="@+id/layout_schedule"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="购买进度:"
                                android:textSize="11sp"
                                android:textColor="@color/fontColor_support"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ProgressBar
                                android:layout_marginLeft="3dp"
                                android:id="@+id/bar_schedule"
                                android:layout_width="150dp"
                                android:layout_height="10dp"
                                style="?android:attr/progressBarStyleHorizontal"
                                />

                            <TextView
                                android:id="@+id/txt_schedule"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/orange"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="18dp"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="参与人数"
                                    android:textSize="11sp"
                                    android:textColor="@color/fontColor_support"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_menber"
                                    android:textSize="13sp"
                                    android:textColor="#484848"
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <View
                                android:background="@color/lineColor"
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"/>

                            <LinearLayout
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/layout_rmb"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="0dp">

                                    <TextView
                                        android:background="@mipmap/coin_rm"
                                        android:layout_width="10dp"
                                        android:layout_height="10dp" />

                                    <TextView
                                        android:id="@+id/txt_rmb"
                                        android:layout_marginLeft="2dp"
                                        android:textSize="10sp"
                                        android:textColor="@color/fontColor_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_gwb"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="0dp">

                                    <TextView
                                        android:background="@mipmap/coin_gw"
                                        android:layout_width="10dp"
                                        android:layout_height="10dp" />

                                    <TextView
                                        android:id="@+id/txt_gwb"
                                        android:layout_marginLeft="2dp"
                                        android:textSize="10sp"
                                        android:textColor="@color/fontColor_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/layout_qbb"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="0dp">

                                    <TextView
                                        android:background="@mipmap/coin_qb"
                                        android:layout_width="10dp"
                                        android:layout_height="10dp" />

                                    <TextView
                                        android:id="@+id/txt_qbb"
                                        android:layout_marginLeft="2dp"
                                        android:textSize="10sp"
                                        android:textColor="@color/fontColor_orange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:background="#E0E0E0"
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"/>

                            <LinearLayout
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="剩余天数"
                                    android:textSize="11sp"
                                    android:textColor="@color/fontColor_support"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_day"
                                    android:textSize="13sp"
                                    android:textColor="#484848"
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:background="@mipmap/more_right"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="10dp"
                        android:layout_height="17dp" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/fontColor_gray"
                    android:text="数量"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_subtract"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/fontColor_gray"
                    android:background="@drawable/border_number"
                    android:layout_marginLeft="17dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txt_number"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="1"
                    android:textColor="@color/fontColor_gray"
                    android:layout_marginLeft="21dp"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_add"
                    android:text="+"
                    android:gravity="center"
                    android:textColor="@color/fontColor_gray"
                    android:background="@drawable/border_number"
                    android:layout_marginLeft="21dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txt_all"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/orange"
                    android:layout_marginLeft="20dp"
                    android:text="包尾"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:background="@drawable/border_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp" />

            </LinearLayout>

        </LinearLayout>
        
    </ScrollView>

    
</LinearLayout>