<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F0F0F0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            app:image_scale_type="center_crop"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        
        <ImageView
            android:visibility="gone"
            android:id="@+id/img_sign"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:background="@mipmap/sgin_in"
            android:layout_width="38dp"
            android:layout_height="38dp" />
        
    </FrameLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="194dp">

    </android.support.v4.view.ViewPager>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:gravity="center_horizontal|bottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/txt_flag1"
            android:background="@drawable/corners_store_type_orange"
            android:layout_width="7dp"
            android:layout_height="7dp" />

        <TextView
            android:id="@+id/txt_flag2"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:background="@drawable/corners_store_type_gray"
            android:layout_width="7dp"
            android:layout_height="7dp" />

        <TextView
            android:id="@+id/txt_flag3"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:background="@drawable/corners_store_type_gray"
            android:layout_width="7dp"
            android:layout_height="7dp" />

        <TextView
            android:id="@+id/txt_flag4"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:background="@drawable/corners_store_type_gray"
            android:layout_width="7dp"
            android:layout_height="7dp" />

        <TextView
            android:id="@+id/txt_flag5"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:background="@drawable/corners_store_type_gray"
            android:layout_width="7dp"
            android:layout_height="7dp" />

        <TextView
            android:id="@+id/txt_flag6"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:background="@drawable/corners_store_type_gray"
            android:layout_width="7dp"
            android:layout_height="7dp" />

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="97dp">

        <LinearLayout
            android:id="@+id/layout_food"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/suibian"
                android:src="@mipmap/food"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:text="美食"
                android:textColor="@color/fontColor_gray"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ktv"
            android:layout_marginLeft="0.5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/ktv"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:text="KTV"
                android:textSize="12sp"
                android:textColor="@color/fontColor_gray"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hair"
            android:layout_marginLeft="0.5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/hair"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:text="美发"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_seven_eleven"
            android:layout_marginLeft="0.5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/seven_eleven"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:text="便利店"
                android:layout_marginTop="7dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="0.5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="97dp">

        <LinearLayout
            android:id="@+id/layout_lavipeditum"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/foot"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/imageView" />

            <TextView
                android:text="足浴"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hotel"
            android:layout_marginLeft="0.5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/hotel"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:text="酒店"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_parent_child"
            android:layout_marginLeft="0.5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/parent_child"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:text="亲子"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_fruits"
            android:textSize="12sp"
            android:layout_marginLeft="0.5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/fruits"
                android:layout_width="45dp"
                android:layout_height="45dp" />

            <TextView
                android:text="蔬果"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:background="@mipmap/notice"
            android:layout_marginLeft="15dp"
            android:layout_width="57dp"
            android:layout_height="12dp" />

        <TextView
            android:gravity="center"
            android:text="公告"
            android:textSize="11sp"
            android:textColor="@color/fontColor_gray"
            android:background="#fff8ce"
            android:layout_marginLeft="20dp"
            android:layout_width="35dp"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/txt_notice"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/fontColor_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


</LinearLayout>