<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@mipmap/discount_used_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="155dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_mark"
                    android:text="¥"
                    android:textSize="18sp"
                    android:textColor="@color/fontColor_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_key2"
                    android:text="100"
                    android:textSize="33sp"
                    android:textColor="@color/fontColor_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_key1"
                android:layout_marginTop="4dp"
                android:text="满100元可用"
                android:textSize="12sp"
                android:textColor="@color/fontColor_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <FrameLayout
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_name"
                    android:text="折扣券"
                    android:textSize="14sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:text="18984955240"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_marginTop="12sp"
                    android:text="有效期至2016-12-10"
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            
            <ImageView
                android:id="@+id/img_zhang"
                android:background="@mipmap/discount_used"
                android:layout_marginTop="18sp"
                android:layout_marginRight="11dp"
                android:layout_gravity="right"
                android:layout_width="56.5dp"
                android:layout_height="56.5dp" />

        </FrameLayout>

        

    </LinearLayout>
    
</LinearLayout>