<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_goodPic"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="65dp" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="13dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_goodName"
                    android:text="爱心自行车"
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_info"
                    android:layout_marginTop="8dp"
                    android:textSize="11sp"
                    android:textColor="@color/fontColor_support"
                    android:text="本店支持在线下单，足不出户，外送到家!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="购买进度:"
                        android:textSize="11sp"
                        android:textColor="@color/fontColor_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:layout_marginLeft="3dp"
                        android:id="@+id/bar_schedule"
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        />

                    <TextView
                        android:id="@+id/txt_schedule"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/orange"
                        android:textSize="12sp"
                        android:text="55%"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="参与人数"
                        android:textSize="11sp"
                        android:textColor="@color/fontColor_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_number"
                        android:text="3位"
                        android:textSize="13sp"
                        android:textColor="#484848"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="@color/lineColor"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_rmb"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">

                        <TextView
                            android:layout_marginLeft="30dp"
                            android:background="@mipmap/coin_rm"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/txt_rmb"
                            android:layout_marginLeft="2dp"
                            android:textSize="10sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_gwb"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">

                        <TextView
                            android:layout_marginLeft="30dp"
                            android:background="@mipmap/coin_gw"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/txt_gwb"
                            android:layout_marginLeft="2dp"
                            android:textSize="10sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_qbb"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">

                        <TextView
                            android:layout_marginLeft="30dp"
                            android:background="@mipmap/coin_qb"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <TextView
                            android:id="@+id/txt_qbb"
                            android:layout_marginLeft="2dp"
                            android:textSize="10sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:background="#E0E0E0"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="剩余天数"
                        android:textSize="11sp"
                        android:textColor="@color/fontColor_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_day"
                        android:text="10天"
                        android:textSize="13sp"
                        android:textColor="#484848"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>