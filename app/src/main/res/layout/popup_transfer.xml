<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_share"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corners_award"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="提示"
            android:textSize="20sp"
            android:textColor="@color/fontColor_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_phone"
            android:text="收款人账号:"
            android:textSize="16sp"
            android:textColorHint="@color/fontColor_gray"
            android:textColor="@color/fontColor_gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_amount"
            android:text="转账金额:"
            android:textSize="16sp"
            android:textColorHint="@color/fontColor_gray"
            android:textColor="@color/fontColor_gray"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="您正在进行转账操作，请仔细核对对方账号和转账金额！\n转账成功后平台概不负责追回款项，请小心操作！"
            android:textSize="12sp"
            android:textColor="@color/fontColor_orange"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="15dp"
            android:background="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_cancel"
                android:gravity="center"
                android:text="取消"
                android:textSize="16sp"
                android:padding="15dp"
                android:textColor="@color/fontColor_orange"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/lineColor"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/txt_confirm"
                android:gravity="center"
                android:text="确定"
                android:textSize="16sp"
                android:textColor="@color/fontColor_orange"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
