<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="39dp">

        <TextView
            android:text="订单编号:"
            android:textSize="11sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/fontColor_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_number"
            android:textSize="11sp"
            android:textColor="@color/fontColor_gray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_time"
            android:textSize="11sp"
            android:layout_marginRight="15dp"
            android:textColor="@color/fontColor_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/lineColor_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="96dp">

        <ImageView
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/img_shopPic" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="14dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_shopName"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:text="觅食潮汕牛肉锅锅"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_status"
                    android:text="已支付"
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_support"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_discount"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_support"
                    android:text="使用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_discount"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/fontColor_support"
                    android:text="使用"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_support"
                    android:text="折扣券"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="消费:"
                        android:textSize="13sp"
                        android:textColor="@color/fontColor_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_price"
                        android:text=""
                        android:textSize="13sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/fontColor_orange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_real"
                    android:visibility="gone"
                    android:text="实付:"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="15dp"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>