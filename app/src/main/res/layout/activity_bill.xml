<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhenghui.zhqb.zhenghuiqianbaomember.activity.BillActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="今日账单"
            android:textColor="@color/fontColor_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_history"
            android:textSize="15sp"
            android:gravity="center"
            android:text="历史账单"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="@color/fontColor_gray" />

    </RelativeLayout>

    <View
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="余额"
                android:textSize="13sp"
                android:textColor="@color/fontColor_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_balance"
                android:layout_marginTop="7dp"
                android:text="¥"
                android:textSize="16sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_beGx"
            android:visibility="gone"
            android:gravity="center"
            android:text="转贡献"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:textColor="@color/fontColor_white"
            android:background="@drawable/corners_orange"
            android:layout_width="55dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/txt_btn"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginRight="15dp"
            android:textColor="@color/fontColor_white"
            android:background="@drawable/corners_orange"
            android:layout_width="55dp"
            android:layout_height="25dp" />

    </LinearLayout>

    <View
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <com.zhenghui.zhqb.zhenghuiqianbaomember.util.RefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/list_bill"
            android:background="@color/intervalColor"
            android:dividerHeight="0.5dp"
            android:divider="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </com.zhenghui.zhqb.zhenghuiqianbaomember.util.RefreshLayout>
</LinearLayout>
