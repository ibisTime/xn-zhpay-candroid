<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:visibility="gone"
        app:image_scale_type="center_inside"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <ImageView
        android:id="@+id/img_advPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_name"
            android:text="ssssssssss"
            android:textSize="16sp"
            android:textColor="@color/fontColor_gray"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_info"
            android:textColor="@color/fontColor_support"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_issue"
            android:textSize="12sp"
            android:textColor="@color/fontColor_support"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="期号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/bar_schedule"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progressbar_default"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_sum"
                android:textSize="12sp"
                android:textColor="@color/fontColor_support"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:text="总需人数"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_surplus"
                android:textSize="12sp"
                android:textColor="@color/fontColor_support"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="剩余 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:textSize="13sp"
            android:textColor="#747474"
            android:text="数量"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_subtract"
            android:text="-"
            android:gravity="center"
            android:textColor="@color/fontColor_gray"
            android:background="@drawable/border_number"
            android:layout_marginLeft="17dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/txt_number"
            android:gravity="center"
            android:textSize="15sp"
            android:text="1"
            android:textColor="@color/fontColor_gray"
            android:layout_marginLeft="21dp"
            android:layout_width="53dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_add"
            android:text="+"
            android:gravity="center"
            android:textColor="@color/fontColor_gray"
            android:background="@drawable/border_number"
            android:layout_marginLeft="21dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/txt_max"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/orange"
            android:layout_marginLeft="75dp"
            android:text="Max"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/border_orange"
            android:layout_width="45dp"
            android:layout_height="24dp" />

    </LinearLayout>
    
    <View
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:id="@+id/layout_introduce"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="玩法介绍"
            android:layout_marginLeft="15dp"
            android:textColor="@color/fontColor_gray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="15dp"
            android:background="@mipmap/more_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/layout_history"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="往期揭晓"
            android:layout_marginLeft="15dp"
            android:textColor="@color/fontColor_gray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="15dp"
            android:background="@mipmap/more_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="所有参与记录"
            android:layout_marginLeft="15dp"
            android:textColor="@color/fontColor_gray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_startTime"
            android:textSize="12sp"
            android:textColor="@color/fontColor_support"
            android:text="2017-02-18 18:58:43开始"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>