<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhenghui.zhqb.zhenghuiqianbaomember.Activity.MainActivity">

    <FrameLayout
        android:id="@+id/id_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent">

    </FrameLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_shop"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/img_shop"
                    android:src="@mipmap/shop_gray"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:textSize="11sp"
                    android:id="@+id/txt_shop"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/fontColor_gray"
                    android:text="优店"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_good"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/img_goood"
                    android:src="@mipmap/good_gray"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/txt_good"
                    android:textSize="11sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/fontColor_gray"
                    android:text="尖货"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_shake"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/img_shake"
                    android:src="@mipmap/shake_gray"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:textSize="11sp"
                    android:id="@+id/txt_shake"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/fontColor_gray"
                    android:text="摇一摇"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_chat"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_chat"
                        android:src="@mipmap/chat_gray"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/txt_point"
                        android:visibility="gone"
                        android:layout_gravity="right"
                        android:background="@drawable/corners_red_point"
                        android:layout_width="6dp"
                        android:layout_height="6dp" />
                </FrameLayout>



                <TextView
                    android:textSize="11sp"
                    android:id="@+id/txt_chat"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/fontColor_gray"
                    android:text="聊聊"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_my"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_my"
                        android:layout_gravity="center"
                        android:src="@mipmap/my_gray"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:visibility="gone"
                        android:layout_marginRight="-10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="6dp"
                        android:layout_height="6dp" />
                </FrameLayout>


                <TextView
                    android:textSize="11sp"
                    android:id="@+id/txt_my"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/fontColor_gray"
                    android:text="我的"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
