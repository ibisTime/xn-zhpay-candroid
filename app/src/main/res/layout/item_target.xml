<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="135dp">

        <TextView
            android:id="@+id/txt_time"
            android:layout_gravity="right"
            android:background="@drawable/corners_target"
            android:gravity="center"
            android:textColor="@color/fontColor_white"
            android:textSize="12sp"
            android:layout_width="75dp"
            android:layout_height="27dp" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name"
                android:textSize="18sp"
                android:singleLine="true"
                android:textColor="@color/fontColor_white"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/bar_schedule"
                android:layout_marginLeft="10dp"
                android:layout_width="160dp"
                android:layout_height="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_orange"
                />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_white"
                    android:text="总需人次"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_sum"
                    android:text="100"
                    android:textSize="16sp"
                    android:textColor="#974b05"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_white"
                    android:text="剩余人次"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_residue"
                    android:text="100"
                    android:textSize="16sp"
                    android:textColor="#974b05"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_white"
                    android:text="单价"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_price"
                    android:text="100"
                    android:textSize="16sp"
                    android:textColor="#974b05"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>