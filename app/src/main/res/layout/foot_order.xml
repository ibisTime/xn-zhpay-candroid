<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/intervalColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:text="买家嘱咐:"
                android:textSize="14sp"
                android:textColor="@color/fontColor_gray"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_enjoin"
                android:textSize="14sp"
                android:textColor="@color/fontColor_hint"
                android:textColorHint="@color/fontColor_hint"
                android:background="@null"
                android:hint="对本次交易的说明"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:background="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical|right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="商品金额:"
                    android:textSize="14sp"
                    android:textColor="@color/fontColor_support"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_money"
                    android:visibility="gone"
                    android:text="￥699.00"
                    android:textSize="18sp"
                    android:textColor="@color/fontColor_orange"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_price"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txt_rmb_1"
                            android:background="@mipmap/coin_rm"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />

                        <TextView
                            android:id="@+id/txt_rmb_2"
                            android:layout_marginLeft="2dp"
                            android:textSize="11sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_rmb_3"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:text="+"
                            android:textSize="11sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_gwb_1"
                            android:background="@mipmap/coin_gw"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />

                        <TextView
                            android:id="@+id/txt_gwb_2"
                            android:layout_marginLeft="2dp"
                            android:textSize="11sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_gwb_3"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:text="+"
                            android:textSize="11sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_qbb_1"
                            android:background="@mipmap/coin_qb"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />

                        <TextView
                            android:id="@+id/txt_qbb_2"
                            android:layout_marginLeft="2dp"
                            android:textSize="11sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_lpq"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp">

                        <TextView
                            android:id="@+id/txt_lpq"
                            android:layout_marginLeft="2dp"
                            android:textSize="12sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:text="礼品券"
                            android:textSize="12sp"
                            android:textColor="@color/fontColor_orange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </FrameLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="运费:"
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_support"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_yunfei"
                    android:text="0元"
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_support"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>