<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF" >


        <TextView
            android:textColor="@color/fontColor_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="聊聊"
            android:textSize="17sp" />


        <FrameLayout
            android:id="@+id/layout_service"
            android:layout_marginRight="15dp"
            android:foregroundGravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@mipmap/service"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_width="17dp"
                android:layout_height="17dp" />

            <TextView
                android:id="@+id/txt_point"
                android:visibility="gone"
                android:layout_gravity="right"
                android:background="@drawable/corners_red_point"
                android:layout_width="6dp"
                android:layout_height="6dp" />

        </FrameLayout>


    </RelativeLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:visibility="gone"
        android:background="@color/disLight"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/layout_friend"
            android:background="@color/highLight"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/fontColor_gray"
                android:textSize="15sp"
                android:gravity="center"
                android:text="推荐的好友"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <View
                android:id="@+id/line_friend"
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:background="@color/lineColor"
            android:layout_marginBottom="2dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layout_merchant"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/fontColor_gray"
                android:textSize="15sp"
                android:gravity="center"
                android:text="推荐的商家"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <View
                android:id="@+id/line_merchant"
                android:visibility="invisible"
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--<View-->
        <!--android:background="@color/intervalColor"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="10dp"/>-->



    <com.zhenghui.zhqb.zhenghuiqianbaomember.util.RefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/list"
            android:background="@color/intervalColor"
            android:dividerHeight="10dp"
            android:divider="@color/intervalColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </com.zhenghui.zhqb.zhenghuiqianbaomember.util.RefreshLayout>


</LinearLayout>