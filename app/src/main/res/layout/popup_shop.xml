<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center"
    android:id="@+id/layout_cancel"
    android:orientation="vertical" >

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_pay"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/corners_popup_button_top"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/fontColor_gray" />

        <View
            android:background="@color/lineColor_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/txt_buy"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/corners_popup_button_bottom"
            android:gravity="center"
            android:text="购买"
            android:textColor="@color/fontColor_gray" />
    </LinearLayout>

</LinearLayout>
