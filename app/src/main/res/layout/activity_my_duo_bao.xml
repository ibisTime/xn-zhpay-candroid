<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的夺宝"
            android:textColor="@color/fontColor_gray"
            android:textSize="17sp" />

    </RelativeLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:background="@color/disLight"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_all"
            android:background="@color/white"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="45dp">

            <TextView
                android:textSize="15sp"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/fontColor_gray"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="3dp">

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/lineColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <View
                    android:id="@+id/line_all"
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:background="@color/lineColor"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layout_underway"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="45dp">

            <TextView
                android:textSize="15sp"
                android:gravity="center"
                android:text="进行中"
                android:layout_weight="1"
                android:textColor="@color/fontColor_gray"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="3dp">

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/lineColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <View
                    android:id="@+id/line_underway"
                    android:visibility="invisible"
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

            </RelativeLayout>



        </LinearLayout>

        <View
            android:background="@color/lineColor"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layout_end"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="45dp">

            <TextView
                android:textSize="15sp"
                android:gravity="center"
                android:text="已揭晓"
                android:layout_weight="1"
                android:textColor="@color/fontColor_gray"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="3dp">

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/lineColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <View
                    android:id="@+id/line_end"
                    android:visibility="gone"
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:background="@color/lineColor"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layout_lucky"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="45dp">

            <TextView
                android:textSize="15sp"
                android:gravity="center"
                android:text="已中奖"
                android:layout_weight="1"
                android:textColor="@color/fontColor_gray"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="3dp">

                <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/lineColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <View
                    android:id="@+id/line_lucky"
                    android:visibility="gone"
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <com.zhenghui.zhqb.zhenghuiqianbaomember.util.RefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_shop"
            android:dividerHeight="0.5dp"
            android:divider="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </com.zhenghui.zhqb.zhenghuiqianbaomember.util.RefreshLayout>

</LinearLayout>
