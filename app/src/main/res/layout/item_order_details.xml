<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/img_good"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            android:layout_width="80dp"
            android:layout_height="65dp" />

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_marginStart="19dp"
            android:paddingRight="13dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/img_good"
            android:layout_marginLeft="19dp"
            android:layout_toRightOf="@+id/img_good"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name"
                android:textSize="13sp"
                android:textColor="@color/fontColor_gray"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_currency"
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_marginLeft="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout_title"
            android:layout_alignStart="@+id/layout_title"
            android:layout_alignLeft="@+id/layout_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_parameter"
                android:textSize="13sp"
                android:singleLine="true"
                android:textColor="@color/fontColor_gray"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_number"
                android:text="X1ä»¶"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/txt_parameter"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>