<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/img_good"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_height="65dp" />

        <TextView
            android:id="@+id/txt_name"
            android:textSize="13sp"
            android:textColor="@color/fontColor_gray"
            android:singleLine="true"
            android:text="普罗旺斯薰衣草精油ssss普罗旺斯薰衣草精油"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:paddingRight="13dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/img_good" />


        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_below="@+id/txt_name"
            android:layout_alignStart="@+id/txt_name"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_rmb1"
                android:text="￥500.00"
                android:textSize="12sp"
                android:textColor="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_rmb2"
                android:layout_marginLeft="3dp"
                android:text=" + "
                android:textSize="12sp"
                android:textColor="@color/fontColor_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_gwb1"
                android:textColor="@color/orange"
                android:text="500.00"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_gwb2"
                android:layout_marginLeft="3dp"
                android:text="购物币 + "
                android:textSize="12sp"
                android:textColor="@color/fontColor_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_qbb1"
                android:textColor="@color/orange"
                android:text="500.00"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/txt_qbb2"
                android:layout_marginLeft="3dp"
                android:text="钱包币"
                android:textSize="12sp"
                android:textColor="@color/fontColor_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_number"
            android:text="X1件"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout_price"
            android:layout_alignStart="@+id/txt_name"
            android:textColor="@color/fontColor_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_btn"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:background="@drawable/corners_orange"
            android:textSize="10sp"
            android:text="待评价"
            android:textColor="@color/white"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/txt_number"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />


    </RelativeLayout>

</LinearLayout>