<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_record"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="84dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <ImageView
                android:background="@mipmap/target_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/lineColor"
            android:layout_width="1dp"
            android:layout_height="50dp"/>

        <ListView
            android:id="@+id/list_record"
            android:layout_marginLeft="10dp"
            android:dividerHeight="0dp"
            android:divider="@color/white"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="65dp">


        </ListView>

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_status1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/border_orange_target"
                    android:textSize="10sp"
                    android:textColor="@color/fontColor_orange"
                    android:layout_width="27dp"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/txt_phone1"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_content1"
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_status2"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/border_orange_target"
                    android:textSize="10sp"
                    android:textColor="@color/fontColor_orange"
                    android:layout_width="27dp"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/txt_phone2"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_content2"
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_status3"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/border_orange_target"
                    android:textSize="10sp"
                    android:textColor="@color/fontColor_orange"
                    android:layout_width="27dp"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/txt_phone3"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_content3"
                    android:textSize="12sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


</LinearLayout>