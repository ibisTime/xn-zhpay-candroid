<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_shop_details"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhenghui.zhqb.zhenghuiqianbaomember.Activity.MyShopDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:text="买单详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/fontColor_gray"
            android:textSize="17sp" />

    </RelativeLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="订单详情"
        android:paddingLeft="15dp"
        android:textSize="13sp"
        android:textColor="@color/fontColor_gray"
        android:layout_width="match_parent"
        android:layout_height="39dp"/>

    <View
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <TextView
        android:id="@+id/txt_orderId"
        android:layout_marginTop="11dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="订单号:"
        android:paddingLeft="15dp"
        android:textSize="13sp"
        android:textColor="@color/fontColor_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_time"
        android:layout_marginTop="11dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="下单时间:"
        android:paddingLeft="15dp"
        android:textSize="13sp"
        android:textColor="@color/fontColor_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_status"
        android:layout_marginTop="11dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:text="订单状态:"
        android:paddingLeft="15dp"
        android:textSize="13sp"
        android:textColor="@color/fontColor_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="10dp"
        android:background="@color/intervalColor"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:text="服务信息"
        android:paddingLeft="15dp"
        android:textSize="13sp"
        android:textColor="@color/fontColor_gray"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/img_shopPic" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="14dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_shopName"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="14sp"
                    android:text="觅食潮汕牛肉锅锅"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_discount"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_support"
                    android:text="使用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_discount"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_orange"
                    android:text="使用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_support"
                    android:text="折扣券"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_price"
                    android:text="消费:"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_support"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_real"
                    android:text="实付:"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="15dp"
                    android:textSize="13sp"
                    android:textColor="@color/fontColor_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
