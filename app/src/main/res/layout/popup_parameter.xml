<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#66000000"
    android:clipChildren="false"
    android:gravity="bottom"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:clipChildren="false"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/img_photo"
                android:scaleType="centerCrop"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layout_cancel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:background="@mipmap/good_cancel"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="9dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_quantity"
                    android:textSize="14sp"
                    android:textColor="@color/fontColor_gray"
                    android:layout_marginTop="28dp"
                    android:text="库存"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_below="@+id/txt_quantity"
                    android:textSize="14sp"
                    android:textColor="@color/fontColor_orange"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

        </LinearLayout>

        <View
            android:background="@color/lineColor_gray"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="规格"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/list_parameter"
                android:layout_marginTop="15dp"
                android:divider="@color/white"
                android:dividerHeight="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">

            </ListView>

            <View
                android:background="@color/lineColor_gray"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="15dp"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="14sp"
                    android:text="购买数量"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_subtract"
                        android:text="-"
                        android:gravity="center"
                        android:textColor="@color/fontColor_gray"
                        android:background="@drawable/border_number"
                        android:layout_marginLeft="19dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/txt_number"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_gray"
                        android:layout_marginLeft="35dp"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_add"
                        android:text="+"
                        android:gravity="center"
                        android:textColor="@color/fontColor_gray"
                        android:background="@drawable/border_number"
                        android:layout_marginLeft="35dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <TextView
                android:id="@+id/txt_buy"
                android:layout_marginTop="40dp"
                android:textSize="16sp"
                android:text="立即购买"
                android:gravity="center"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>